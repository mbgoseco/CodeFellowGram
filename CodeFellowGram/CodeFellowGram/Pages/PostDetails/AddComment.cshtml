@page "{id}"
@model CodeFellowGram.Pages.PostDetails.AddCommentModel
@{
    ViewData["Title"] = "Add Comment";

    Layout = "_Layout";
}
<div id="comment-box">
    <form class="manager" method="post">
        <label asp-for="Comment.User"></label>
        <input asp-for="Comment.User" />
        <br />
        <label asp-for="Comment.UserComment">Comment</label>
        <textarea rows="5" asp-for="Comment.UserComment"></textarea>
        <br />
        <button class="submitter" type="submit">POST COMMENT</button>
    </form>
</div>