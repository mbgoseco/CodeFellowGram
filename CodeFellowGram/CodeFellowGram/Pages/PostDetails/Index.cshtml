@page "{id}"
@model CodeFellowGram.Pages.PostDetails.IndexModel
@{
    ViewData["Title"] = "Index";
}

@{ 
    var comments = Model.Post.Comments.ToList();
}
<head>
    <title>Details</title>
    <link rel="stylesheet" href="~/StyleSheet.css" />
</head>

<div>
    <p id="author">@Model.Post.Author</p>
    <img src="@Model.Post.ImageURL" alt="image" />
    <p id="caption">@Model.Post.Caption</p>
    @foreach (var comment in comments)
    {
        <p class="comment"><span class="commentAuthor">@comment.User</span> @comment.UserComment</p>
    }
    <a id="edit" asp-page="/PostDetails/Manage" asp-route-id="@Model.Post.ID">EDIT</a>
    <a id="comment" asp-page="/PostDetails/AddComment" asp-route-id="@Model.Post.ID">ADD COMMENT</a>
    <a id="go-home" asp-page="/Index">HOME</a>
</div>

